@page
@model BlazorWasmSample.Server.Areas.Identity.Pages.Account.Manage.ConnectionStringsModel

@{
    ViewData["ActivePage"] = ManageNavPages.ConnectionStrings;
}

<h4>Dashboard permissions</h4>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5>Available connection strings</h5>
            <select asp-items="Model.Input.ConnectionStrings"></select>

            <h5>New connection string</h5>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Description"></label>
                <input asp-for="Input.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.ConnectionString"></label>
                <input asp-for="Input.ConnectionString" class="form-control" />
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary" style="margin-top: 15px;">Add</button>
        </form>
    </div>
</div>
